{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
<div class="container">
{% for post in posts %}
<h2>{{ post.title }}</h2>
<p>{{ post.content }}</p>
<a href="{{ path('show', {slug:post.slug})}}" class="btn btn-primary">Voir plus</a>
{% endfor %}
 <div class='d-flex justify-content-center'>
 {{ knp_pagination_render(posts) }}
 </div>
</div>
{% endblock %}
